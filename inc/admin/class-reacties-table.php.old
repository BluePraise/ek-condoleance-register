<?php

namespace Tahlil\Inc\Admin;
use Tahlil\Inc\Libraries;

/**
 * Class for displaying registered WordPress Users
 * in a WordPress-like Admin Table with row actions to 
 * perform user meta opeations
 */

class Reacties_Table extends Libraries\WP_List_Table  {
	private $plugin_text_domain;

	public function __construct( $plugin_text_domain ) {
		parent::__construct( [
			'singular' => __( 'Reactie', $this->plugin_text_domain ), //singular name of the listed records
			'plural'   => __( 'Reacties', $this->plugin_text_domain ), //plural name of the listed records
			'ajax'     => false //should this table support ajax?
		] );

		$this->plugin_text_domain = $plugin_text_domain;
	}

	public static function get_reacties( $per_page = 5, $page_number = 1 ) {
	  	global $wpdb;

	  	$sql = "SELECT * FROM {$wpdb->prefix}comments WHERE comment_type = 'reactie' ";

	  	// print_r($sql);

	  	if ( ! empty( $_REQUEST['orderby'] ) ) {
	    	$sql .= ' ORDER BY ' . esc_sql( $_REQUEST['orderby'] );
	    	$sql .= ! empty( $_REQUEST['order'] ) ? ' ' . esc_sql( $_REQUEST['order'] ) : ' ASC';
	  	}
	  	$sql .= " LIMIT $per_page";
	  	$sql .= ' OFFSET ' . ( $page_number - 1 ) * $per_page;
	  	$result = $wpdb->get_results( $sql, 'ARRAY_A' );

	  	return $result;
	}

	public static function delete_reactie( $id ) {
	  	global $wpdb;

	  	$wpdb->delete(
	    	"{$wpdb->prefix}comments",
	    	[ 'ID' => $id ],
	    	[ '%d' ]
	  	);
	}

	public static function record_count() {
	  	global $wpdb;

	  	$sql = "SELECT COUNT(*) FROM {$wpdb->prefix}comments";
	  	return $wpdb->get_var( $sql );
	}

	public function column_default( $item, $column_name ) {
	  	switch ( $column_name ) {
	    	case 'comment_ID':
	    	case 'comment_author':
	      		return $item[ $column_name ];
	    	default:
	      		return print_r( $item, true ); //Show the whole array for troubleshooting purposes
	  	}
	}

	public function column_comment_author( $item ) {
	  	// create a nonce
	  	$delete_nonce = wp_create_nonce( 'tahlil_delete_reactie' );

	  	$title = '<strong>' . $item['comment_author'] . '</strong>';

	  	$actions = [
	    	'delete' => sprintf( 
		    	'<a href="?page=%s&action=%s&reactie=%s&_wpnonce=%s">Delete</a>', 
		    	esc_attr( $_REQUEST['page'] ), 
		    	'delete', 
		    	absint( $item['comment_ID'] ), 
		    	$delete_nonce 
	    	)
	 	];

	  	return $title . $this->row_actions( $actions );
	}

	public function column_cb( $item ) {
  		return sprintf(
    		'<input type="checkbox" name="bulk-delete[]" value="%s" />', $item['comment_ID']
  		);
	}

	public function get_columns() {
	  	$columns = [
	    	'cb'      => '<input type="checkbox" />',
	    	'comment_author'    => __( 'Name', $this->plugin_text_domain ),
	    	'comment_content' => __( 'Comment', $this->plugin_text_domain ),
	    	'comment_date'    => __( 'Date', $this->plugin_text_domain )
	  	];

	  	return $columns;
	}

	/**
	 * Columns to make sortable.
	 *
	 * @return array
	 */
	public function get_sortable_columns() {
	  	$sortable_columns = array(
	    	'comment_ID' => array( 'Latest', true )
	  	);

	  	return $sortable_columns;
	}

	public function get_bulk_actions() {
	  	$actions = [
	    	'bulk-delete' => 'Delete'
	  	];

	  	return $actions;
	}


	public function process_bulk_action() {

	  	//Detect when a bulk action is being triggered...
	  	if ( 'delete' === $this->current_action() ) {

	    // In our file that handles the request, verify the nonce.
	    	$nonce = esc_attr( $_REQUEST['_wpnonce'] );

	    	if ( ! wp_verify_nonce( $nonce, 'tahlil_delete_reactie' ) ) {
	      		die( 'Go get a life script kiddies' );
	    	} else {
	      		$this->delete_reactie( absint( $_GET['reactie'] ) );

	      		wp_redirect( esc_url( add_query_arg() ) );
	      		exit;
	    	}
	  	}

	  	// If the delete bulk action is triggered
	  	if ( ( isset( $_POST['action'] ) && $_POST['action'] == 'bulk-delete' ) 
	  		|| ( isset( $_POST['action2'] ) && $_POST['action2'] == 'bulk-delete' )
	  	) {

	    	$delete_ids = esc_sql( $_POST['bulk-delete'] );

	    	// loop over the array of record IDs and delete them
	    	foreach ( $delete_ids as $id ) {
	      		$this->delete_reactie( $id );
	    	}
	    	wp_redirect( esc_url( add_query_arg() ) );
	    	exit;
	  	}
	}

	public function prepare_items() {

	  	$this->_column_headers = $this->get_column_info();

	  	/** Process bulk action */
	  	$this->process_bulk_action();

	  	$per_page     = $this->get_items_per_page( 'items_per_page', 5 );
	  	$current_page = $this->get_pagenum();
	  	$total_items  = $this->record_count();

	  	$this->set_pagination_args( [
	    	'total_items' => $total_items, //WE have to calculate the total number of items
	    	'per_page'    => $per_page //WE have to determine how many items to show on a page
	  	] );


	  	$this->items = $this->get_reacties( $per_page, $current_page );
	}
}
